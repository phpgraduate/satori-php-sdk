"repositories": [
    {
        "type": "package",
        "package": {
            "name": "phpgraduate/satoriPHPSDK",
            "version": "dev-master",
            "source": {
                "url": "https://github.com/phpgraduate/satoriPHPSDK.git",
                "type": "git",
                "reference": "master"
            },
			"require": {
				"php": ">=5.4.0",
				"react/socket": "0.4.* | 0.5.*"
			},
			"require-dev": {
				"phpunit/phpunit": "~4",
				"cboden/ratchet": "dev-master"
			},
            "autoload": {
				"psr-4": {
					"satoriPHPSDK\\": "src/satoriPHPSDK"
				}
			},
			"autoload-dev": {
				"psr-4": {
					"satoriPHPSDK\\Tests\\": ["tests/satoriPHPSDK/Tests", "tests/satoriPHPSDK/Tests/_includes"]
				}
			}
        }
    }
],